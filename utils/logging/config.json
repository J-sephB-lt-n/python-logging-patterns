{
  "version": 1,
  "disable_existing_loggers": false,
  "filters": {
    "info_or_below": {
      "()": "utils.logging.loggers.NonErrorFilter"
    }
  },
  "formatters": {
      "simple": {
          "format": "[%(levelname)s|%(module)s|L%(lineno)d] %(asctime)s: %(message)s",
          "datefmt": "%Y-%m-%dT%H:%M:%S%z"
      },
      "jsonl": {
          "()": "utils.logging.loggers.JsonFormatter",
          "fmt_keys": {
              "level": "levelname",
              "message": "message",
              "timestamp": "timestamp",
              "logger": "name",
              "module": "module",
              "function": "funcName",
              "line": "lineno",
              "thread_name": "threadName"
          } 
      },
      "json_indent": {
          "()": "utils.logging.loggers.JsonFormatter",
          "fmt_keys": {
              "level": "levelname",
              "message": "message",
              "timestamp": "timestamp",
              "logger": "name",
              "module": "module",
              "function": "funcName",
              "line": "lineno",
              "thread_name": "threadName"
          },
          "indent": 4
      }
  },
  "handlers": {
      "stdout": {
          "class": "logging.StreamHandler",
          "level": "INFO",
          "filters": ["info_or_below"],
          "formatter": "json_indent",
          "stream": "ext://sys.stdout"
      },
      "stderr": {
          "class": "logging.StreamHandler",
          "level": "WARNING",
          "formatter": "simple",
          "stream": "ext://sys.stderr"
      },
      "file_json": {
          "class": "logging.handlers.RotatingFileHandler",
          "level": "DEBUG",
          "formatter": "jsonl",
          "filename": "tmp/logs/my_app.log.jsonl",
          "maxBytes": 10485760,
          "backupCount": 5
      },
      "queue_handler": {
          "class": "logging.handlers.QueueHandler",
          "handlers": [
            "stderr", 
            "stdout",
            "file_json"
          ],
          "respect_handler_level": true
      }
  },
  "loggers": {
    "root": {
      "level": "DEBUG",
      "handlers": [
        "queue_handler"
      ]
    }
  }
}
